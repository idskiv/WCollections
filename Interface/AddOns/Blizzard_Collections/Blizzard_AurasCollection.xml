					<TexCoords left="0.51171875" right="0.626953125" top="0.013671875" bottom="0.0859375"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parentnew" x="-20" y="10"/>
						<Anchor point="BOTTOMRIGHT" relativeTo="$parentnew" x="20" y="-10"/>
